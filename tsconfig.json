{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "target",
        "alwaysStrict": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
